<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <TextView
            android:id="@+id/Home_Fragment_Image_weather"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="？°C"
            android:padding="5dp" />

        <TextView
            android:id="@+id/Home_Fragment_Image_Location"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:lines="1"
            android:paddingLeft="120dp"
            android:paddingRight="120dp"
            android:layout_height="match_parent"
            android:gravity="center" />

    </RelativeLayout>
    <TextView
        android:id="@+id/Home_Fragment_TextView_Search"
        android:background="@drawable/home_edittext_background"
        android:hint=""
        android:gravity="center"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="#acacac"
        android:layout_height="30dp" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--轮播-->
            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/Home_Fragment_BGABanner"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"
                app:banner_pointAutoPlayInterval="5000"
                app:banner_pointContainerBackground="#802b2b2b"
                android:layout_width="match_parent"
                android:layout_height="150dp">
            </cn.bingoogolapple.bgabanner.BGABanner>
            <!--item-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/Home_Fragment_RecyclerView"
                android:overScrollMode="never"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <ImageView
                android:id="@+id/Home_HuoDong"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            <!--活动广告图-->
            <LinearLayout
                android:id="@+id/Home_HuoDong_Layout1"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/Home_HuoDong1"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/common_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/Home_HuoDong_Layout2"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/Home_HuoDong2"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/common_nodata"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/Home_HuoDong3"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        android:src="@mipmap/common_nodata"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <!--好物热狗-->
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text=" 好 物 热 购\n\tHOT STUFF"
                        android:textSize="@dimen/Text_Size_2"
                        android:gravity="center"
                        android:textColor="@color/C2B2B2B"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="MORE >"
                        android:gravity="center|top"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/Text_Size_1"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/home_fragment_hotstuff"></include>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"></View>
                    <include layout="@layout/home_fragment_hotstuff"></include>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/Home_HotGoods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></FrameLayout>
            </LinearLayout>
            <View
                android:background="#f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="5dp"></View>
            <!--热文推荐-->
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text=" 热 文 推 荐\n\tHOT SHARE"
                        android:textSize="@dimen/Text_Size_2"
                        android:gravity="center"
                        android:textColor="@color/C2B2B2B"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="MORE >"
                        android:gravity="center|top"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/Text_Size_1"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/Home_HotArticle_Title"
                            android:text="标题标题标题标题标题标题标题标题标题"
                            android:gravity="center|left"
                            android:maxLines="2"
                            android:textSize="@dimen/Text_Size_3"
                            android:textColor="@color/C2B2B2B"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/Home_HotArticle_Content"
                            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
                            android:gravity="center|left|top"
                            android:maxLines="3"
                            android:textSize="@dimen/Text_Size_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/Home_HotArticle_Image"
                        android:layout_gravity="center"
                        android:src="@mipmap/common_nodata"
                        android:layout_width="160dp"
                        android:layout_height="120dp">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
