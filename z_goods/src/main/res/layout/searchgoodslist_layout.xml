<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SearchGoodsList_Back"
            android:layout_width="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/SearchGoodsList_TextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/home_edittext_background"
            android:layout_toRightOf="@+id/SearchGoodsList_Back"
            android:layout_toLeftOf="@+id/SearchGoodsList_Switch"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:drawableLeft="@mipmap/home_search"
            android:gravity="left|center"
            android:text="输入关键字或商品标题"
            android:textColor="#2b2b2b"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/SearchGoodsList_Switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textColor="#2b2b2b"
            android:textSize="25sp" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/SearchGoods_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <android.support.design.widget.TabItem
            android:text="商品"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <android.support.design.widget.TabItem
            android:text="店铺"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <android.support.design.widget.TabItem
            android:text="文章"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.design.widget.TabLayout>
    <com.example.z_common.Custom.NoScrollViewPager
        android:id="@+id/SearchGoodsList_Page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.example.z_common.Custom.NoScrollViewPager>
    <FrameLayout
        android:id="@+id/SearchGoodsList_Frame"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
