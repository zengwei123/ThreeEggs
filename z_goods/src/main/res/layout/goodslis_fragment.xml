<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="@dimen/goodsList_H">
        <TextView android:id="@+id/GoodsList_Comprehensive" style="@style/Z_GoodsList_TextStyle" />
        <TextView android:id="@+id/GoodsList_Sales" style="@style/Z_GoodsList_TextStyle" />
        <TextView android:id="@+id/GoodsList_Price" style="@style/Z_GoodsList_TextStyle" />
        <TextView android:id="@+id/GoodsList_Distance" style="@style/Z_GoodsList_TextStyle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/goodsList_H">
        <ImageView  android:id="@+id/GoodsList_Style" style="@style/Z_GoodsList_ImageStyle" />
        <ImageView android:id="@+id/GoodsList_Screening" style="@style/Z_GoodsList_ImageStyle" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/GoodsList_Recycler"
        android:layout_marginTop="@dimen/goodsList_H"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>