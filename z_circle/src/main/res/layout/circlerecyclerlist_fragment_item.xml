<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/CircleRecyclerList_Recycler_Item_Image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="180dp" />
    <LinearLayout
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/CircleRecyclerList_Recycler_Item_Label"
            android:textColor="#EB8092"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/circlelist_label_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/CircleRecyclerList_Recycler_Item_Context"
            android:textSize="@dimen/Text_Size_3"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/C2B2B2B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/CircleRecyclerList_Recycler_Item_Name"
                android:textSize="@dimen/Text_Size_2"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="7"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/CircleRecyclerList_Recycler_Item_Praise"
                android:textSize="@dimen/Text_Size_2"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
