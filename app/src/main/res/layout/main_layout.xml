<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:id="@+id/Main_DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.z_common.Custom.NoScrollViewPager
            android:id="@+id/Main_ViewPager"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.example.z_common.Custom.NoScrollViewPager>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/Main_Home_Tab"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/Main_Home_Tab_Image"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/main_home" />

                <TextView
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:layout_centerInParent="true"
                    android:text="首页"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Main_Home_Tab_Image"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Main_Circle_Tab"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/Main_Circle_Tab_Image"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/main_circle1" />
                <TextView
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:layout_centerInParent="true"
                    android:text="鱼塘"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Main_Circle_Tab_Image"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Main_Add_Tab"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="bottom">

                <ImageView
                    android:id="@+id/dd5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/main_add" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Main_Message_Tab"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/Main_Message_Tab_Image"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/main_order1" />
                <TextView
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:layout_centerInParent="true"
                    android:text="消息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Main_Message_Tab_Image"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Main_Personal_Tab"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/Main_Personal_Tab_Image"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/main_personal1" />
                <TextView
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:layout_centerInParent="true"
                    android:text="我的"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Main_Personal_Tab_Image"/>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/Main_DrawerFragment"
        android:layout_gravity="left|start"
        android:clickable="true"
        android:tag="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</android.support.v4.widget.DrawerLayout>
